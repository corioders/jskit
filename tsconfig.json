{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",

    "types": [],
    "lib": [
      "ESNext",
      "DOM",
    ],

    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
    },

    "outDir": "out",
    "declaration": true,

		"strict": true,
		"allowJs": false,
    "checkJs": false,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": false,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noImplicitReturns": true
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ],
  "references": [
		{
			"path": "./config/tsconfig/tsconfig.jest.json"
		}
	]
}